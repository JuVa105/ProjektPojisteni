@model ProjektPlnaVerze.Models.Insurance

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Detail pojištění</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName)
            @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeOfInsurance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeOfInsurance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Value)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObjectOfInsurance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObjectOfInsurance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartingFrom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartingFrom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ending)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ending)
        </dd>
    </dl>
</div>
@if (User.IsInRole("admin"))
{
    <div>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editovat</a> 
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.Id">Odstranit</a>
    </div>
}
